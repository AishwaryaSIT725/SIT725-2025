{
  "name": "skillsync-mvc",
  "version": "1.0.0",
  "description": "SkillSync starter using MVC (Routes, Controllers, Services, Models)",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "jest": "^30.1.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.10",
    "request": "^2.88.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!server.js"
    ]
  }
}
